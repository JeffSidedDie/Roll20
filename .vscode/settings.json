// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"**/*.js.map": {
			"when": "$(basename)"
		}
	},
	"typescript.tsdk": "./node_modules/typescript/lib",
	"tslint.nodePath": "./node_modules/tslint/lib",
	"tslint.exclude": "**/*.js",
	"editor.formatOnSave": true,
}